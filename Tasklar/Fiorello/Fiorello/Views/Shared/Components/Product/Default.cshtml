@model List<Product>
@foreach (Product pro in Model)
{
    <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="product-item text-center" data-id="@pro.Category.Name.ToLower()">
            <div class="img">
                <a href="">
                    <img src="~/img/@pro.Image" class="img-fluid" alt="">
                </a>
            </div>
            <div class="title mt-3">
                <h6>@pro.Title</h6>
            </div>
            <div class="price">
                <span class="text-black-50">
                    <a asp-controller="Home" asp-action="AddBasket" asp-route-id="@pro.Id">Add to deyishdim</a>
                </span>
                <span class="text-black-50">$@pro.Price</span>
            </div>
        </div>
    </div>
}